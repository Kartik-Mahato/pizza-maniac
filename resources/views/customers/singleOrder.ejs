<section class="status">
    <div class="container mx-auto">
        <div class="w-2/3 mx-auto status-box">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl underline font-bold">Track Your Order:</h1>
                <h6 class="text-green-600 text-sm bg-white py-1 rounded-full px-4"><h6%= order._id %></h6>
                <input id="hidden-input" type="hidden" value="<%= JSON.stringify(order) %>" />
            </div>
            <ul>
                <li class="status-line text-xl pb-16" data-status="Order Placed">
                    <span>Order Placed</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="confirmed">
                    <span>Order Confirmed</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="prepared">
                    <span>Preparation</span>
                </li>
                <li class="status-line text-xl pb-16" data-status="delivered">
                    <span>Out for Delivery</span>
                </li>
                <li class="status-line text-xl" data-status="completed">
                    <span>Completed</span>
                </li>
            </ul>
        </div>
    </div>
</section>